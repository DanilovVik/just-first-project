extends ../base-template/base-template

block data
  include ../../components/bullet-list/bullet-list
  include ../../components/chart/chart
  include ../../components/comfort-item/comfort-item
  include ../../components/footer/footer
  include ../../components/header/header
  include ../../components/review/review
  include ../../components/summary-form/summary-form
  -
    const path = require('path');
    const fs = require('fs');
    const data = JSON.parse(fs.readFileSync('./src/pages/room/room.json'));
    const title = 'TOXIN';
    const description = 'room page of Toxin Pages project';
    const keywords = 'toxin pages, room"'

block content
  .room
    header.room__header
      +header(data.header)
    main.room__main
      figure.room__figure
        .room__photo-group
          .room__photo-container
            img.room__photo(src=data.roomPhotos[0].url, alt="room photo")
        .room__photo-group
          .room__photo-container
            img.room__photo(src=data.roomPhotos[1].url, alt="room photo")
          .room__photo-container
            img.room__photo(src=data.roomPhotos[2].url, alt="room photo")
      .room__section
        .room__container
          .room__top-group
            .room__group-block
              .room__title Сведения о номере
              .room__comfort-items-container
                each item in data.comfortItems
                  +comfort-item(item)
            .room__group-block
              .room__title Впечатления от номера
              .room__chart-container
                +chart(data.chart)
          .room__middle-group
            .room__group-block
              .room__title-container
                .room__title Отзывы посетителей номера
                .room__review-counter= `${data.reviews.length} отзыва`
              .room__reviews-container
                each review in data.reviews
                  +review(review)
          .room__bottom-group
            .room__group-block
              .room__title.room__title_left-indented Правила
              .room__bullet-list-container
                +bullet-list(data.rules)
            .room__group-block
              .room__title Отмена
              .room__cancelation-description= data.cancelation.description
        .room__summary-form-container
          +summary-form(data.summaryForm)
    footer.room__footer
      +footer(data.footer)