include ../../components/header/header
include ../../components/footer/footer
include ../../components/guests-dropdown/guests-dropdown
include ../../components/dropdown/dropdown
include ../../components/range-slider/range-slider
include ../../components/checkbox-list/checkbox-list
include ../../components/room-dropdown/room-dropdown
include ../../components/header/header
include ../../components/footer/footer
include ../../components/search-form/search-form
include ../../components/pagination/pagination
include ../../components/room-card/room-card

-
  const path = require('path');
  const fs = require('fs');
  const data = JSON.parse(fs.readFileSync('./src/pages/searchpage/data.json'));

doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width")
    title TOXIN
  body
    header
      +header(data.headerData)
      .filter-control.js-filter-control Фильтр
    main
      .filter-container.js-filter-container
        +dropdown(data.dateDropdown)
        +guests-dropdown(data.guestsDropdown)
        +range-slider()
        +checkbox-list(data.rulesCheckbox)
        +checkbox-list(data.availabilityCheckbox)
        +room-dropdown(data.roomDropdown)
        +checkbox-list(data.amenitiesCheckbox)
      .data-container
        .data-container__title Номера, которые мы для вас подобрали
        .rooms-container
          -var i = 0
          while i++ < 12
            +room-card(data.roomCard)
        +pagination()
    footer
      +footer(data.footerData)