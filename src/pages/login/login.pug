extends ../base-template/base-template

block data
  include ../../components/footer/footer
  include ../../components/header/header
  include ../../components/login-form/login-form
  -
    const title = 'TOXIN';
    const description = 'login page of Toxin Pages project';
    const keywords = 'toxin pages, login';
    const loginButtonLink = 'login.html';
    const signupButtonLink = 'signup.html';
    const logotypeLink= 'main.html';

block content
  .login
    header.login__header
      +header({
        loginButtonLink: loginButtonLink,
        signupButtonLink: signupButtonLink,
        logotypeLink: logotypeLink
      })
    main.login__main
      .login__login-form-container
        +login-form({signupButtonLink: signupButtonLink})
    footer.login__footer
      +footer({logotypeLink: logotypeLink})