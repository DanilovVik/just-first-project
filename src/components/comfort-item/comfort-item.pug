mixin comfort-item(params)
  -
    const {
      title = 'title',
      description = 'description',
      icon = 'whatshot',
      underlined = false,
    } = params;
    const class_underline = underlined ? 'comfort-item_with-underline' : '';

  .comfort-item(class=class_underline)
    .comfort-item__icon(data-icon=icon)
    .comfort-item__text
      .comfort-item__title= title
      .comfort-item__description= description