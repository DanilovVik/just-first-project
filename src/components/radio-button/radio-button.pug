mixin radio-button(params)
  -
    const {
      title,
      name = 'defaultName',
      value = 'defaultValue',
      checked = false,
    } = params;

  .radio-button
    label.radio-button__label
      input.radio-button__input(
        type="radio",
        name=name,
        value=value,
        checked=checked
      )
      .radio-button__container
    .radio-button__title=title