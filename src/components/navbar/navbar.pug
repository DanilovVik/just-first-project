include ./__item/navbar__item
include ../button/button

mixin navbar(isLoggedIn, name)
  div.navbar
    +navbar__item('О Нас', false)
    +navbar__item('Услуги', true)
    +navbar__item('Вакансии', false)
    +navbar__item('Новости', false)
    +navbar__item('Соглашения', true)
    if(isLoggedIn)
      div.navbar__stick
      div.navbar__username
        +text('text_label', name)
    else 
      +button('ВОЙТИ')
      +button('ЗАРЕГИСТРИРОВАТЬСЯ', true)
