include ../date-dropdown/date-dropdown
include ../button/button
include ../dropdown/dropdown

mixin search-form()
  div.search-form
    div.search-form__title Найдём номера под ваши пожелания
    +date-dropdown()
    +dropdown({size: "m", items: ["взрослые", "дети", "младенцы"], placeholder: "Сколько гостей"})
    +button({text: "Подобрать номер", size: "l"})
